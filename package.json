{
  "name": "@lumirelle/stylelint-config",
  "type": "module",
  "version": "4.1.1",
  "packageManager": "pnpm@10.21.0",
  "description": "Lumirelle's StyleLint config",
  "author": "Lumirelle <shabbyacc@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lumirelle",
  "homepage": "https://github.com/lumirelle/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumirelle/stylelint-config.git"
  },
  "bugs": "https://github.com/lumirelle/stylelint-config/issues",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "css",
    "scss",
    "vue",
    "lumirelle"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prepublishOnly": "nr build",
    "prerelease": "nr test:run && nr typecheck",
    "release": "nr prerelease && bumpp && na publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "postcss-less": ">=6.0.0",
    "stylelint": ">=16.0.0",
    "stylelint-less": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "postcss-less": {
      "optional": true
    },
    "stylelint-less": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:prod",
    "@clack/prompts": "catalog:prod",
    "@lumirelle/defu": "catalog:prod",
    "@stylistic/stylelint-config": "catalog:prod",
    "local-pkg": "catalog:prod",
    "lodash.clonedeep": "catalog:prod",
    "postcss-scss": "catalog:prod",
    "semver": "catalog:prod",
    "stylelint-config-html": "catalog:prod",
    "stylelint-config-recess-order": "catalog:prod",
    "stylelint-scss": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/ni": "catalog:dev",
    "@antfu/utils": "catalog:inlined",
    "@lumirelle/stylelint-config": "workspace:*",
    "@types/lodash.clonedeep": "catalog:types",
    "@types/node": "catalog:types",
    "@types/postcss-less": "catalog:types",
    "@types/semver": "catalog:types",
    "@vitest/coverage-v8": "catalog:testing",
    "bumpp": "catalog:dev",
    "czg": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "lint-staged": "catalog:dev",
    "postcss-less": "catalog:dev",
    "sass-embedded": "catalog:testing",
    "simple-git-hooks": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-less": "catalog:dev",
    "taze": "catalog:dev",
    "tinyexec": "catalog:testing",
    "tinyglobby": "catalog:testing",
    "tsdown": "catalog:dev",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "vue": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "na exec lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
