{
  "name": "@lumirelle/stylelint-config",
  "type": "module",
  "version": "5.0.0-beta.2",
  "description": "Lumirelle's StyleLint config",
  "author": "Lumirelle <shabbyacc@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lumirelle",
  "homepage": "https://github.com/lumirelle/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumirelle/stylelint-config.git"
  },
  "bugs": "https://github.com/lumirelle/stylelint-config/issues",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "css",
    "scss",
    "vue",
    "lumirelle"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "bun run simple-git-hooks",
    "dev": "bun run tsdown --watch",
    "build": "bun run tsdown",
    "start": "bun run ./src/index.ts",
    "lint": "bun run eslint .",
    "typecheck": "bun run tsc --noEmit",
    "usagecheck": "bun run knip",
    "check": "bun run lint && bun run typecheck && bun run usagecheck",
    "test": "bun test",
    "prerelease": "bun run build --attw.profile esm-only --publint && bun run check && bun run test",
    "release": "bun run bumpp"
  },
  "workspaces": {
    "packages": [
      "."
    ],
    "catalogs": {
      "dev": {
        "@antfu/eslint-config": "^6.7.3",
        "bumpp": "^10.3.2",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.2.0",
        "knip": "^5.80.0",
        "lint-staged": "^16.2.7",
        "postcss-less": "^6.0.0",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "stylelint": "^16.26.1",
        "stylelint-less": "^4.0.0",
        "typescript": "^5.9.3"
      },
      "build": {
        "@arethetypeswrong/core": "^0.18.2",
        "publint": "^0.3.16",
        "tsdown": "^0.19.0"
      },
      "inlined": {
        "@antfu/utils": "^9.3.0"
      },
      "prod": {
        "@antfu/install-pkg": "^1.1.0",
        "@clack/prompts": "^0.11.0",
        "@dreamsicle.io/stylelint-config-tailwindcss": "^1.1.2",
        "@lumirelle/defu": "^1.1.0",
        "@stylistic/stylelint-config": "^3.0.1",
        "local-pkg": "^1.1.2",
        "lodash.clonedeep": "^4.5.0",
        "postcss-scss": "^4.0.9",
        "semver": "^7.7.3",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^7.4.0",
        "stylelint-scss": "^6.14.0"
      },
      "testing": {
        "tinyexec": "^1.0.2",
        "tinyglobby": "^0.2.15",
        "vitest-package-exports": "^1.1.2"
      },
      "types": {
        "@types/bun": "^1.3.5",
        "@types/lodash.clonedeep": "^4.5.9",
        "@types/postcss-less": "^4.0.7",
        "@types/semver": "^7.7.1"
      }
    }
  },
  "peerDependencies": {
    "postcss-less": ">=6.0.0",
    "stylelint": ">=16.0.0",
    "stylelint-less": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "postcss-less": {
      "optional": true
    },
    "stylelint-less": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:prod",
    "@clack/prompts": "catalog:prod",
    "@dreamsicle.io/stylelint-config-tailwindcss": "catalog:prod",
    "@lumirelle/defu": "catalog:prod",
    "@stylistic/stylelint-config": "catalog:prod",
    "local-pkg": "catalog:prod",
    "lodash.clonedeep": "catalog:prod",
    "postcss-scss": "catalog:prod",
    "semver": "catalog:prod",
    "stylelint-config-html": "catalog:prod",
    "stylelint-config-recess-order": "catalog:prod",
    "stylelint-scss": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:dev",
    "@antfu/utils": "catalog:inlined",
    "@arethetypeswrong/core": "catalog:build",
    "@types/bun": "catalog:types",
    "@types/lodash.clonedeep": "catalog:types",
    "@types/postcss-less": "catalog:types",
    "@types/semver": "catalog:types",
    "bumpp": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "knip": "catalog:dev",
    "lint-staged": "catalog:dev",
    "postcss-less": "catalog:dev",
    "publint": "catalog:build",
    "simple-git-hooks": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-less": "catalog:dev",
    "tinyexec": "catalog:testing",
    "tinyglobby": "catalog:testing",
    "tsdown": "catalog:build",
    "typescript": "catalog:dev",
    "vitest-package-exports": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": "bun run eslint --fix"
  }
}
