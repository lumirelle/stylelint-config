{
  "name": "@lumirelle/stylelint-config",
  "type": "module",
  "version": "5.0.0-beta.4",
  "description": "Lumirelle's StyleLint config",
  "author": "Lumirelle <shabbyacc@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lumirelle",
  "homepage": "https://github.com/lumirelle/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumirelle/stylelint-config.git"
  },
  "bugs": "https://github.com/lumirelle/stylelint-config/issues",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "css",
    "scss",
    "vue",
    "lumirelle"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "bun simple-git-hooks",
    "dev": "bunup --watch",
    "build": "bunup",
    "start": "bun run ./src/index.ts",
    "lint": "bun eslint .",
    "typecheck": "bun tsc --noEmit",
    "usagecheck": "bun knip",
    "distcheck": "bun attw --pack --profile esm-only && bun publint",
    "check": "bun run lint && bun run typecheck && bun run usagecheck && bun run distcheck",
    "test": "bun test",
    "prerelease": "bun run build && bun run check && bun run test",
    "release": "bun bumpp"
  },
  "workspaces": {
    "packages": [
      "."
    ],
    "catalogs": {
      "prod": {
        "@antfu/install-pkg": "^1.1.0",
        "@antfu/utils": "^9.3.0",
        "@clack/prompts": "^0.11.0",
        "@dreamsicle.io/stylelint-config-tailwindcss": "^1.1.2",
        "@lumirelle/defu": "^1.1.0",
        "@stylistic/stylelint-config": "^4.0.0",
        "local-pkg": "^1.1.2",
        "lodash.clonedeep": "^4.5.0",
        "postcss-scss": "^4.0.9",
        "semver": "^7.7.3",
        "stylelint-config-html": "^1.1.0",
        "stylelint-config-recess-order": "^7.6.0",
        "stylelint-scss": "^7.0.0"
      },
      "dev": {
        "bumpp": "^10.4.0",
        "postcss-less": "^6.0.0",
        "simple-git-hooks": "git+https://github.com/toplenboren/simple-git-hooks.git#7625657",
        "stylelint": "^17.0.0",
        "stylelint-less": "^4.0.0",
        "typescript": "^5.9.3"
      },
      "types": {
        "@types/bun": "^1.3.6",
        "@types/lodash.clonedeep": "^4.5.9",
        "@types/postcss-less": "^4.0.7",
        "@types/semver": "^7.7.1"
      },
      "build": {
        "bunup": "^0.16.20"
      },
      "check": {
        "@antfu/eslint-config": "^7.2.0",
        "@arethetypeswrong/cli": "^0.18.2",
        "eslint": "^9.39.2",
        "eslint-plugin-format": "^1.3.1",
        "knip": "^5.82.1",
        "lint-staged": "^16.2.7",
        "publint": "^0.3.17"
      },
      "test": {
        "vitest-package-exports": "^1.1.2"
      }
    }
  },
  "peerDependencies": {
    "postcss-less": ">=6.0.0",
    "stylelint": ">=17.0.0",
    "stylelint-less": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "postcss-less": {
      "optional": true
    },
    "stylelint-less": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "catalog:prod",
    "@antfu/utils": "catalog:prod",
    "@clack/prompts": "catalog:prod",
    "@dreamsicle.io/stylelint-config-tailwindcss": "catalog:prod",
    "@lumirelle/defu": "catalog:prod",
    "@stylistic/stylelint-config": "catalog:prod",
    "local-pkg": "catalog:prod",
    "lodash.clonedeep": "catalog:prod",
    "postcss-scss": "catalog:prod",
    "semver": "catalog:prod",
    "stylelint-config-html": "catalog:prod",
    "stylelint-config-recess-order": "catalog:prod",
    "stylelint-scss": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:check",
    "@arethetypeswrong/cli": "catalog:check",
    "@types/bun": "catalog:types",
    "@types/lodash.clonedeep": "catalog:types",
    "@types/postcss-less": "catalog:types",
    "@types/semver": "catalog:types",
    "bumpp": "catalog:dev",
    "bunup": "catalog:build",
    "eslint": "catalog:check",
    "eslint-plugin-format": "catalog:check",
    "knip": "catalog:check",
    "lint-staged": "catalog:check",
    "postcss-less": "catalog:dev",
    "publint": "catalog:check",
    "simple-git-hooks": "catalog:dev",
    "stylelint": "catalog:dev",
    "stylelint-less": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest-package-exports": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged"
  },
  "lint-staged": {
    "*": "bun eslint --fix"
  }
}
