{
  "name": "@lumirelle/stylelint-config",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@10.18.2",
  "description": "Lumirelle's Stylelint config",
  "author": "Lumirelle <shabbyacc@outlook.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/lumirelle",
  "homepage": "https://github.com/lumirelle/stylelint-config#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumirelle/stylelint-config.git"
  },
  "bugs": "https://github.com/lumirelle/stylelint-config/issues",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "stylelint",
    "stylelint-config",
    "css",
    "scss",
    "vue",
    "lumirelle"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint",
    "prerelease": "nr test:run && nr typecheck",
    "release": "nr prerelease && bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "stylelint": ">=16.0.0"
  },
  "dependencies": {
    "@stylistic/stylelint-config": "catalog:prod",
    "local-pkg": "catalog:prod",
    "stylelint-config-recess-order": "catalog:prod",
    "stylelint-config-standard": "catalog:prod",
    "stylelint-config-standard-scss": "catalog:prod",
    "stylelint-config-standard-vue": "catalog:prod",
    "stylelint-prettier": "catalog:prod"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@antfu/ni": "catalog:cli",
    "@antfu/utils": "catalog:inlined",
    "@lumirelle/stylelint-config": "workspace:*",
    "@types/node": "catalog:types",
    "bumpp": "catalog:cli",
    "czg": "catalog:cli",
    "eslint": "catalog:cli",
    "eslint-plugin-format": "catalog:cli",
    "execa": "catalog:testing",
    "lint-staged": "catalog:cli",
    "sass-embedded": "catalog:testing",
    "simple-git-hooks": "catalog:cli",
    "stylelint": "catalog:dev",
    "stylelint-config-html": "catalog:prod",
    "taze": "catalog:cli",
    "tinyexec": "catalog:utils",
    "tinyglobby": "catalog:testing",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vite": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing",
    "vue": "catalog:testing",
    "yaml": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
